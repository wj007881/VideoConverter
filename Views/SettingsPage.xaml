<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BailianCoding.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer Padding="40">
        <StackPanel Spacing="24" MaxWidth="800">
            <TextBlock Text="Settings" 
                      FontSize="28" 
                      FontWeight="Bold"
                      Foreground="{StaticResource TextPrimaryBrush}"/>

            <!-- FFmpeg Configuration -->
            <Border Background="White" CornerRadius="12" Padding="24" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="FFmpeg Configuration" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimaryBrush}"/>
                    
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                x:Name="FfmpegPathTextBox"
                                Header="FFmpeg Path"
                                PlaceholderText="Enter path to ffmpeg.exe or leave as 'ffmpeg' if in PATH"
                                Text="ffmpeg"/>
                        
                        <Button Grid.Column="1" 
                                x:Name="BrowseFfmpegButton"
                                Click="BrowseFfmpegButton_Click"
                                Content="Browse"
                                VerticalAlignment="Bottom"
                                Height="32"
                                Background="{StaticResource PrimaryBrush}"
                                Foreground="White"/>
                    </Grid>

                    <Button x:Name="TestFfmpegButton" 
                            Click="TestFfmpegButton_Click"
                            HorizontalAlignment="Left"
                            Background="{StaticResource AccentBrush}"
                            Foreground="White">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE73E;" FontSize="14"/>
                            <TextBlock Text="Test FFmpeg"/>
                        </StackPanel>
                    </Button>
                    
                    <TextBlock x:Name="FfmpegStatusText" 
                              FontSize="12" 
                              Foreground="{StaticResource TextSecondaryBrush}"
                              Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Output Settings -->
            <Border Background="White" CornerRadius="12" Padding="24" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Output Settings" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimaryBrush}"/>
                    
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                x:Name="OutputFolderTextBox"
                                Header="Default Output Folder"/>
                        
                        <Button Grid.Column="1" 
                                x:Name="BrowseOutputButton"
                                Click="BrowseOutputButton_Click"
                                Content="Browse"
                                VerticalAlignment="Bottom"
                                Height="32"
                                Background="{StaticResource PrimaryBrush}"
                                Foreground="White"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Performance Settings -->
            <Border Background="White" CornerRadius="12" Padding="24" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Performance" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimaryBrush}"/>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="Maximum Concurrent Tasks" FontSize="12"/>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider Grid.Column="0" 
                                   x:Name="MaxConcurrentSlider"
                                   Minimum="1" 
                                   Maximum="16"
                                   Value="4"
                                   TickFrequency="1"
                                   StepFrequency="1"/>
                            
                            <TextBlock Grid.Column="1" 
                                      x:Name="MaxConcurrentText"
                                      Text="4"
                                      Width="30"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- About Section -->
            <Border Background="White" CornerRadius="12" Padding="24" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel Spacing="12">
                    <TextBlock Text="About" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimaryBrush}"/>
                    
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}">
                        <Run Text="Bailian Video Converter"/><LineBreak/>
                        <Run Text="Version 1.0.0"/><LineBreak/><LineBreak/>
                        <Run Text="A modern video transcoding application built with WinUI 3."/><LineBreak/>
                        <Run Text="Powered by FFmpeg."/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>