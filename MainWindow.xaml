<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="BailianCoding.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BailianCoding.Models"
    mc:Ignorable="d">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" x:Name="TitleBar" Background="{StaticResource PrimaryBrush}">
            <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE8B2;" FontSize="18" Foreground="White"/>
                <TextBlock Text="Bailian Video Converter" 
                          Margin="12,0,0,0" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Entire area scrollable -->
            <ScrollViewer Grid.Column="0" 
                          VerticalScrollBarVisibility="Auto"
                          Background="White" 
                          BorderBrush="#E2E8F0" 
                          BorderThickness="0,0,1,0">
                <StackPanel Padding="20">
                    <!-- Output Settings -->
                    <TextBlock Text="Output Settings" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,12"
                              Foreground="{StaticResource TextPrimaryBrush}"/>

                    <!-- Output Folder -->
                    <StackPanel Spacing="4" Margin="0,0,0,12">
                        <TextBlock Text="Output Folder" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <Grid ColumnSpacing="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" 
                                    x:Name="OutputFolderTextBox"
                                    Text="{x:Bind ViewModel.OutputFolder, Mode=TwoWay}"
                                    IsReadOnly="True"
                                    FontSize="11"
                                    Height="32"/>
                            <Button Grid.Column="1" 
                                    x:Name="BrowseOutputButton"
                                    Click="BrowseOutputButton_Click"
                                    Content="..."
                                    Width="32"
                                    Height="32"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Spacing="4" Margin="0,0,0,12">
                        <TextBlock Text="Format" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ComboBox x:Name="FormatComboBox" HorizontalAlignment="Stretch" SelectedIndex="0">
                            <x:String>MP4 (H.264)</x:String>
                            <x:String>MP4 (H.265/HEVC)</x:String>
                            <x:String>WebM (VP9)</x:String>
                            <x:String>AVI</x:String>
                            <x:String>MKV</x:String>
                            <x:String>MOV</x:String>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Spacing="4" Margin="0,0,0,12">
                        <TextBlock Text="Resolution" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ComboBox x:Name="ResolutionComboBox" HorizontalAlignment="Stretch" SelectedIndex="0">
                            <x:String>Original</x:String>
                            <x:String>4K (3840x2160)</x:String>
                            <x:String>2K (2560x1440)</x:String>
                            <x:String>1080p (1920x1080)</x:String>
                            <x:String>720p (1280x720)</x:String>
                            <x:String>480p (854x480)</x:String>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Spacing="4" Margin="0,0,0,20">
                        <Grid>
                            <TextBlock Text="Quality" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="QualityText" Text="CRF: 23 (Good)" FontSize="11" HorizontalAlignment="Right" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Grid>
                        <Slider x:Name="QualitySlider" Minimum="1" Maximum="51" Value="23"/>
                    </StackPanel>

                    <!-- Task Queue -->
                    <TextBlock Text="Task Queue" 
                              FontSize="14" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,8"
                              Foreground="{StaticResource TextPrimaryBrush}"/>

                    <ItemsControl ItemsSource="{x:Bind ViewModel.Tasks, Mode=OneWay}" Margin="0,0,0,20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:TranscodeTask">
                                <Border Background="#F1F5F9" CornerRadius="6" Padding="10" Margin="0,0,0,6">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="{x:Bind FileName, Mode=OneWay}" 
                                                  FontSize="11" FontWeight="Medium"
                                                  TextTrimming="CharacterEllipsis"/>
                                        <ProgressBar Value="{x:Bind Progress, Mode=OneWay}" 
                                                    Maximum="100" Height="4"
                                                    Background="#E2E8F0"
                                                    Foreground="{StaticResource PrimaryBrush}"/>
                                        <Grid>
                                            <TextBlock Text="{x:Bind Status, Mode=OneWay}" FontSize="10"/>
                                            <TextBlock Text="{x:Bind ProgressText, Mode=OneWay}" FontSize="10" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Action Buttons -->
                    <Button x:Name="AddFilesButton" 
                           Click="AddFilesButton_Click"
                           HorizontalAlignment="Stretch"
                           Height="40"
                           Background="{StaticResource PrimaryBrush}"
                           Foreground="White"
                           CornerRadius="6"
                           Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE109;" FontSize="14"/>
                            <TextBlock Text="Add Files" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" 
                               x:Name="StartButton"
                               Click="StartButton_Click"
                               HorizontalAlignment="Stretch"
                               Height="36"
                               Background="{StaticResource AccentBrush}"
                               Foreground="White"
                               CornerRadius="6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE768;" FontSize="12"/>
                                <TextBlock Text="Start" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Grid.Column="1" 
                               x:Name="StopButton"
                               Click="StopButton_Click"
                               HorizontalAlignment="Stretch"
                               Height="36"
                               Background="#EF4444"
                               Foreground="White"
                               CornerRadius="6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE71A;" FontSize="12"/>
                                <TextBlock Text="Stop" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Panel - File List -->
            <Grid Grid.Column="1" Padding="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="Files to Convert" FontSize="20" FontWeight="SemiBold"/>
                    <TextBlock x:Name="FileCountText" Text="(0 files)" FontSize="14" Margin="8,6,0,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- File List -->
                <Grid Grid.Row="1" Background="White" CornerRadius="12" BorderBrush="#E2E8F0" BorderThickness="1">
                    <ListView x:Name="FileListView"
                             ItemsSource="{x:Bind ViewModel.Files, Mode=OneWay}"
                             SelectionMode="Extended"
                             Background="Transparent">
                        <ListView.Header>
                            <Grid Padding="16,10" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" x:Name="SelectAllCheckBox"/>
                                <TextBlock Grid.Column="1" Text="File Name" FontWeight="SemiBold" FontSize="12"/>
                                <TextBlock Grid.Column="2" Text="Format" FontWeight="SemiBold" FontSize="12"/>
                                <TextBlock Grid.Column="3" Text="Size" FontWeight="SemiBold" FontSize="12"/>
                                <TextBlock Grid.Column="4" Text="Status" FontWeight="SemiBold" FontSize="12"/>
                            </Grid>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:VideoFile">
                                <Grid Padding="16,10" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" IsChecked="{x:Bind IsSelected, Mode=TwoWay}"/>
                                    <TextBlock Grid.Column="1" Text="{x:Bind FileName}" TextTrimming="CharacterEllipsis" FontSize="13" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{x:Bind Format}" FontSize="12" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Grid.Column="3" Text="{x:Bind FileSize}" FontSize="12" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Grid.Column="4" Text="{x:Bind Status}" FontSize="12" VerticalAlignment="Center" Foreground="{StaticResource AccentBrush}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyStatePanel" 
                               Visibility="Visible"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Spacing="12">
                        <FontIcon Glyph="&#xE8B2;" FontSize="48" Foreground="#CBD5E1"/>
                        <TextBlock Text="No files added" FontSize="16" FontWeight="Medium" HorizontalAlignment="Center"/>
                        <TextBlock Text="Click 'Add Files' to select videos" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>

                <!-- Status Bar -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0" Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Border Width="8" Height="8" Background="{StaticResource AccentBrush}" CornerRadius="4"/>
                        <TextBlock FontSize="12">
                            <Run Text="Completed: "/>
                            <Run x:Name="CompletedCount" Text="{x:Bind ViewModel.CompletedCount, Mode=OneWay}" FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Border Width="8" Height="8" Background="{StaticResource PrimaryBrush}" CornerRadius="4"/>
                        <TextBlock FontSize="12">
                            <Run Text="Processing: "/>
                            <Run x:Name="ProcessingCount" Text="{x:Bind ViewModel.ProcessingCount, Mode=OneWay}" FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Border Width="8" Height="8" Background="#CBD5E1" CornerRadius="4"/>
                        <TextBlock FontSize="12">
                            <Run Text="Pending: "/>
                            <Run x:Name="PendingCount" Text="{x:Bind ViewModel.PendingCount, Mode=OneWay}" FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>